head
    title  My App
    link(href='/css/bootstrap.css' rel='stylesheet')
    script(src='/js/bootstrap.js' type='application/javascript')
// Navigation
body(style='background-color:orange')
    nav.navbar.navbar-expand-lg.navbar-dark.static-top(style='background-color:dodgerblue')
        .container
            a.navbar-brand(href='#')
                img(src='imgs/dilbert.png' alt='My Logo' height='50')
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.ms-auto
                    if from == 'showProducts'
                        li.nav-item
                            a.nav-link.active(aria-current='page' href='/showProducts') Show
                        li.nav-item
                            a.nav-link(href='/showItems') Items
                        li.nav-item
                            a.nav-link(href='/showCustomers') Customers
                    else if from == 'addProduct'
                        li.nav-item
                            a.nav-link(aria-current='page' href='/showProducts') Show
                        li.nav-item
                            a.nav-link.active(href='/showItems') Items
                        li.nav-item
                            a.nav-link(href='/showCustomers') Customers
                    else
                        li.nav-item
                            a.nav-link(aria-current='page' href='/showProducts') Show
                        li.nav-item
                            a.nav-link(href='/showItems') Items
                        li.nav-item
                            a.nav-link.active(href='/showCustomers') Customers

